public class Dice
    {

       

        public int myRollAlgo(Random rnd)
        {
            int realitiesLength = rnd.Next(1, 9);

            int[] reality = new int[realitiesLength];

            int total = 0;
            for (int i =0; i< realitiesLength; i++)
            {
                reality[i] = rnd.Next(1, 9);
                total += reality[i];
            }
            return total;
        }
    }
